# ==============================================
# DONATION BOT - KONFIGURASI LINGKUNGAN (.ENV)
# ==============================================
# Salin file ini menjadi .env dan isi dengan data milikmu
# JANGAN unggah file .env ke repository publik!

# ==============================================
# KONFIGURASI BOT
# ==============================================

# Token Bot dari @BotFather
BOT_TOKEN=masukkan_token_bot_di_sini

# ID Pengguna Admin Telegram (dapatkan dari @userinfobot)
ADMIN_USER_ID=123456789

# ID Channel untuk verifikasi admin (terlihat saat meneruskan pesan ke @userinfobot)
CHANNEL_ID=-1001234567890

# Channel publik untuk notifikasi donasi (opsional), format: @namachannel atau ID
NOTIFICATION_CHANNEL=@channel_notifikasi_anda

# ==============================================
# KONFIGURASI DATABASE
# ==============================================

# Nama file database SQLite
DATABASE_NAME=donation_bot.db

# ==============================================
# KONFIGURASI HAPUS OTOMATIS
# ==============================================

# Waktu (dalam detik) sebelum pesan otomatis dihapus
AUTO_DELETE_DONATION=600      # Pesan donasi (misal saat menampilkan QR)
AUTO_DELETE_WELCOME=120       # Pesan selamat datang
AUTO_DELETE_SUCCESS=300       # Pesan sukses/transaksi selesai

# ==============================================
# KONFIGURASI KEAMANAN
# ==============================================

# Batas untuk mencegah spam
MAX_PENDING_DONATIONS=1       # Maksimum donasi yang belum selesai per pengguna
DONATION_TIMEOUT=3600         # Waktu habis otomatis (dalam detik)

# ==============================================
# BATASAN DONASI
# ==============================================

# Batas minimal dan maksimal donasi (dalam Rupiah)
MIN_DONATION_AMOUNT=1
MAX_DONATION_AMOUNT=1000000

# ==============================================
# KONFIGURASI QRIS
# ==============================================

# Kode QRIS dapat diatur melalui perintah /setupqris atau secara manual di sini
# QRIS_CODE=kode_qris_anda

# ==============================================
# FITUR YANG DIIZINKAN (FEATURE FLAGS)
# ==============================================

# Pengaturan fitur donasi
ENABLE_CUSTOM_AMOUNTS=true        # Izinkan nominal bebas
ENABLE_DONOR_NAMES=true           # Tampilkan nama pendonor
ENABLE_DONOR_MESSAGES=true        # Izinkan pesan dari pendonor
ENABLE_AUTO_POSTING=true          # Posting otomatis ke channel

# Fitur admin
ENABLE_USER_BANNING=true          # Izinkan pemblokiran pengguna
ENABLE_CUSTOM_ITEMS=true          # Izinkan item/tujuan khusus
ENABLE_STATISTICS=true            # Tampilkan statistik

# ==============================================
# KONFIGURASI LOG (CATATAN AKTIVITAS)
# ==============================================

# Level log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# File log (opsional, bisa dikosongkan)
# LOG_FILE=donation_bot.log

# ==============================================
# KONFIGURASI PENGEMBANGAN
# ==============================================

# Aktifkan mode debug (untuk pengujian)
DEBUG_MODE=false
TEST_MODE=false   # Jika true, bot tidak akan memproses pembayaran sungguhan

# ==============================================
# KONFIGURASI LANJUTAN
# ==============================================

# Waktu tunggu dan percobaan ulang
POLLING_TIMEOUT=10
POLLING_INTERVAL=0
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# ==============================================
# KOSTUMISASI
# ==============================================

# Nama merek bot untuk pesan-pesan
BOT_BRAND=aldo soft

# Simbol mata uang
CURRENCY_SYMBOL=Rp

# Format mata uang (true = gunakan koma untuk ribuan)
CURRENCY_FORMAT=true

# ==============================================
# NILAI CONTOH (HAPUS BAGIAN INI SETELAH DIISI)
# ==============================================
# BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# ADMIN_USER_ID=1704985763
# CHANNEL_ID=-1001234567890
# NOTIFICATION_CHANNEL=@beridonasi
